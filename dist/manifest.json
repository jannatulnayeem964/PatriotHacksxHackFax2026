{
  "manifest_version": 3,
  "name": "CO2PID",
  "version": "1.0",
  "description": "Making the hidden cost of food visible",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.walmart.com/cart*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}